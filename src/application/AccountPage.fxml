<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.Cursor?>

<VBox prefHeight="450.0" prefWidth="600.0" style="-fx-background-color: #2D0517" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.AccountPageController">
    <children>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="30.0" style="-fx-background-color: #04D632;">
            <children>
                <Circle fill="DODGERBLUE" radius="32.0" stroke="BLACK" strokeType="INSIDE" style="-fx-fill: #EB0A0A;" />
                <Label fx:id="usernameField" text="Fred Don">
                    <font>
                        <Font name="Agency FB" size="30.0" />
                    </font>
                </Label>
                <Button fx:id="feedPollButton" mnemonicParsing="false" onAction="#FeedPoll_button" text="FeedPoll">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>
                <Button fx:id="myPollsButton" mnemonicParsing="false" onAction="#MyPolls_button" text="My Polls">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>
                <Button fx:id="myAccountButton" mnemonicParsing="false" onAction="#MyAccount_button" text="My account">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>
                <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#Logout_button" text="Logout">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>
            </children>
        </HBox>

        <HBox alignment="CENTER">
            <VBox alignment="CENTER" spacing="27" style="-fx-background-color: #2D0517; -fx-padding: 20; -fx-border-color: #2D0517; -fx-border-radius: 5; -fx-background-radius: 5;">
                <Label fx:id="myAccountLabel" text="My Account" style="-fx-text-fill: #FFFFFF; -fx-font-family: 'Arial'; -fx-font-size: 24.0; -fx-font-weight: bold; -fx-alignment: CENTER; -fx-padding: 10;" />
                <Label fx:id="nameLabel" text="Name: Fred" style="-fx-text-fill: #FFFFFF; -fx-font-size: 16px; -fx-alignment: CENTER;" />
                <Label fx:id="surnameLabel" text="Surname: Johnson" style="-fx-text-fill: #FFFFFF; -fx-font-size: 16px; -fx-alignment: CENTER;" />
                <Label fx:id="ageLabel" text="Age: 30" style="-fx-text-fill: #FFFFFF; -fx-font-size: 16px; -fx-alignment: CENTER;" />
                <Label fx:id="emailLabel" text="Email: fred@example.com" style="-fx-text-fill: #FFFFFF; -fx-font-size: 16px; -fx-alignment: CENTER;" />
                <Label fx:id="badgesLabel" text="Badges: [True, False, True]" style="-fx-text-fill: #FFFFFF; -fx-font-size: 16px; -fx-alignment: CENTER;" />
            </VBox>
        </HBox>
    </children>
</VBox>
