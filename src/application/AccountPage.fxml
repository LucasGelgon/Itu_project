<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.Cursor?>

<VBox prefHeight="450.0" prefWidth="600.0" style="-fx-background-color: #2D0517" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.AccountPageController">
    <children>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="30.0" style="-fx-background-color: #04D632;">
            <children>
                <Circle fill="DODGERBLUE" radius="32.0" stroke="BLACK" strokeType="INSIDE" style="-fx-fill: #EB0A0A;" />
                <Label fx:id="username_field" text="Fred Don">
                    <font>
                        <Font name="Agency FB" size="30.0" />
                    </font>
                </Label>
                <Button mnemonicParsing="false" onAction="#FeedPoll_button" text="FeedPoll">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>
                <Button mnemonicParsing="false" onAction="#MyPolls_button" text="My Polls">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>
                <Button mnemonicParsing="false" onAction="#MyAccount_button" text="My account">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>
                <Button mnemonicParsing="false" onAction="#Logout_button" text="Logout">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>
            </children>
        </HBox>

        <HBox alignment="CENTER">
   <children>
   			<VBox alignment="CENTER" spacing="27" style="-fx-background-color: #2D0517; -fx-padding: 20; -fx-border-color: #2D0517; -fx-border-radius: 5; -fx-background-radius: 5;">
      <children>
      				<Label style="-fx-text-fill: #FFFFFF; -fx-font-family: 'Arial'; -fx-font-size: 24.0; -fx-font-weight: bold; -fx-alignment: CENTER; -fx-padding: 10;" text="My Account" />
      
      				<HBox spacing="10">
         <children>
         					<Label fx:id="nameLabel" style="-fx-text-fill: #FFFFFF; -fx-font-size: 16px;" text="Name:" />
         					<TextField fx:id="nameTextField" onAction="#updateUserDetails" promptText="Enter your name" />
         </children>
      				</HBox>
      				<HBox spacing="10">
         <children>
         					<Label fx:id="surnameLabel" style="-fx-text-fill: #FFFFFF; -fx-font-size: 16px;" text="Surname:" />
         					<TextField fx:id="surnameTextField" onAction="#updateUserDetails" promptText="Enter your surname" />
         </children>
      				</HBox>
      				<HBox spacing="10">
         <children>
         					<Label fx:id="ageLabel" style="-fx-text-fill: #FFFFFF; -fx-font-size: 16px;" text="Age:" />
         					<TextField fx:id="ageTextField" onAction="#updateUserDetails" promptText="Enter your age" />
         </children>
      				</HBox>
      				<HBox spacing="10">
         <children>
         					<Label fx:id="emailLabel" style="-fx-text-fill: #FFFFFF; -fx-font-size: 16px;" text="Email:" />
         					<TextField fx:id="emailTextField" onAction="#updateUserDetails" promptText="Enter your email" />
         </children>
      				</HBox>
      				<HBox spacing="10">
         <children>
         				<Label fx:id="badgesLabel" style="-fx-text-fill: #FFFFFF; -fx-font-size: 16px;" text="Badges:" />
         </children>
      				</HBox>
      </children>
   			</VBox>
   </children>
		</HBox>

    </children>
</VBox>
